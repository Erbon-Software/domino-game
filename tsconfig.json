{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "rootDir": ".",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "importHelpers": true,
    "sourceRoot": "src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**.ts",
    "./src/**.js",
    "./index.ts"
  ],
  "exclude": [
    "./dist",
    "./node_modules",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}